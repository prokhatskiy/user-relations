.modal
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-color: rgba(255, 255, 255, .8)
    display: flex
    justify-content: center
    align-items: center

    &__content
        background-color: #fff
        border: 1px solid #000
        padding: 50px
        position: relative
        box-shadow: 0 0 20px rgba(0, 0, 0, .5)

    &__close-btn
        position: absolute
        top: 10px
        right: 10px
        padding: 0 7px;





