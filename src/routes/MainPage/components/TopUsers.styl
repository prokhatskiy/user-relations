.top-users
    margin: 0
    padding: 0
    list-style: none

    &__item
        margin-bottom: 10px
        text-align: center

    &__img
        width: 50px
        height: 50px

    &__link
        display: inline-block
        max-width: 40%
        font-size: 10px
        text-align: center
        color: #333
        text-decoration: none

        &:first-child
            margin-right: 10px

        &:last-child
            margin-left: 10px

    &__name
        display: block
        white-space: nowrap
        overflow: hidden
        text-overflow: ellipsis
